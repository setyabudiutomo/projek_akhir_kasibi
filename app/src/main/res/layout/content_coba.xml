<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/content_coba">

    <ImageButton
        android:id="@+id/mempercepat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="20dp"
        android:background="@null"/>

    <TextView
        android:id="@+id/tampilan_kosakata_coba"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:paddingTop="10dp"
        android:textSize="18dp"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:layout_alignParentLeft="true"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp">

        <EditText
            android:id="@+id/editTextCoba"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="5dp"
            android:layout_toLeftOf="@id/sendingCoba"
            android:gravity="center_horizontal"
            android:hint="Masukkan Kata"
            android:inputType="textPersonName" />

        <ImageButton
            android:id="@+id/sendingCoba"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentBottom="true"
            android:layout_toLeftOf="@id/voiceCommandCoba"
            android:layout_marginBottom="10dp"
            android:background="@drawable/sending" />

        <ImageButton
            android:id="@+id/voiceCommandCoba"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentBottom="true"
            android:layout_marginEnd="20dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/microphone" />
    </RelativeLayout>
</RelativeLayout>